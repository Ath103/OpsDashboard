@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<NuGetDashboard.Model.DefaultViewModel>
@{
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>NuGet Gallery Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="Content/bootstrap.min.css" rel="stylesheet" />
    <link href="Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="Content/font-awesome.min.css" rel="stylesheet" />
    <link href="Content/Master.css" rel="stylesheet" />
</head>
<body>
    <nav id="site-header" class="navbar navbar-static-top">
        <div class="navbar-inner">
            <ul class="nav pull-right">
                <li><a href="@Model.Configuration.LoginPageUrl">Administrator Login</a></li>
            </ul>
            <a class="brand" href="/">NuGet Gallery Dashboard</a>
            <ul class="nav">
                <li data-menu="app-packages"><a href="app-packages"><i class="icon-cloud"></i>Site Packages</a></li>
                <li data-menu="ops"><a href="ops"><i class="icon-cogs"></i> Ops Status</a></li>
            </ul>
        </div>
    </nav>

    <div id="root-container" class="container-fluid">
        <div class="page" data-view="app-packages">
            <h2>Site Packages</h2>
            <div class="well">
                <p>The following are the site packages currently available in storage</p>
                <div data-bind="if: isLoading()">
                    <span><i class="icon-spinner icon-spin"></i> Loading...</span>
                </div>
                <ul class="nav nav-list" data-bind="if: !isLoading()">
                    <li data-bind="foreach: items">
                        <a data-bind="attr: {href: url}">
                            <i class="icon-cloud-download"></i>
                            <span data-bind="text: name" />
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="page" data-view="ops">
            <h2>Operations Status</h2>
            <div class="well">
                <p>Status of NuGet Gallery Operations Tasks</p>
                <div data-bind="if: isLoading()">
                    <span><i class="icon-spinner icon-spin"></i> Loading...</span>
                </div>
                <div data-bind="if: !isLoading()">
                    <table>
                        <thead>
                            <tr>
                                <th>Job</th>
                                <th>PID</th>
                                <th>Time (UTC)</th>
                                <th>Duration</th>
                                <th>Status</th>
                                <th>Message</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- ko foreach: jobs -->
                            <tr data-bind="foreach: runs">
                                <td data-bind="text: $parent.jobName" />
                                <td data-bind="text: pid" />
                                <td data-bind="text: displayDate" />
                                <td data-bind="text: duration" />
                                <td data-bind="text: status" />
                                <td data-bind="text: message" />
                            </tr>
                            <!-- /ko -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="Scripts/jquery-1.9.0.min.js"></script>
    <script src="Scripts/bootstrap.min.js"></script>
    <script src="Scripts/underscore.min.js"></script>
    <script src="Scripts/backbone.min.js"></script>
    <script src="Scripts/knockout-2.2.1.js"></script>
    <script src="Scripts/knockback.min.js"></script>
    <script src="js/dashboard.js"></script>
</body>
</html>
