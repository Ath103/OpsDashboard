 <script type="text/javascript">       
              function UpdateSupportRequest() {
               
                  $.ajax({
                      url: '@Url.Action("Index", "SupportRequests")',
                      type: "GET",
                      dataType: 'json',                   
                      success: function (result) {                          
                          $("#SupportRequestBadge").html(result);
                          $('#PingdomCheck1').addClass('tile double bg-color-blue');
                          if (parseInt(result) > 5) {
                              $('#PingdomCheck1').removeClass('tile-content bg-color-blue');
                              $('#PingdomCheck1').addClass('tile double bg-color-yellow');
                          }
                          if (parseInt(result) > 10) {
                              $('#PingdomCheck1').removeClass('tile-content bg-color-blue');
                              $('#PingdomCheck1').addClass('tile double bg-color-red');
                          }
                          
                          window.setTimeout(UpdateSupportRequest, 5000 * 60);
                      }
                  });
              };          

</script>   

